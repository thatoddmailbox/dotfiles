shopt -s nocaseglob

alias d='doc'
alias desk='des'
alias dl='dow'
alias down='dow'
alias downl='dow'
alias m='mkdir -p'
alias mk='mkdir -p'
alias sch='school'

alias pud='pushd'
alias pod='popd'

c() {
	if [[ -e $1 ]]; then
		cd $1
	elif [[ $1 ]]; then
		cd *$1*/
	fi
}
e() {
	if [[ $1 ]]; then
		echo *$1*
	fi
}
mkc() {
	mkdir -p $1
	cd $1
}
xo() {
	if [[ $1 ]]; then
		xdg-open "$1"
	else
		xdg-open .
	fi
}

des() {
	cd ~/Desktop
	c $1
}
doc() {
	cd ~/Documents
	c $1
}
dow() {
	cd ~/Downloads
